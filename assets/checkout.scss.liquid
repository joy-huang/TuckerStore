  margin-top: 2px;
  padding-left: 24px;
  padding-right: 24px;

  .sidebar__content {
    border: none;
    padding: 0;
  }

  .product__description {
    @extend .paragraph3;
  }

  .product__description__variant {
    font-size: 12px;
  }

  .product__price {
     @extend .price-font;
  }

  .field__input-wrapper label,
  .field__input-wrapper input {
    @extend .paragraph3;
