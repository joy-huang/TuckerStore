// Mobile only stylings.
@include at-query($max, $medium) {

  .sidebar .section__header {
    display: none;
  }
  .content .sidebar__content {
    // display: none;
    // border: none;
    // padding: 0;
  }
  .main__header {
    display: none;
  }

  .order-summary-toggle__icon-wrapper {
    display: none !important;
  }

  .banner .logo {
    text-align: center !important;
  }
  // Mobile drop down label font.
  .order-summary-toggle__text.order-summary-toggle__text--show {
    font-family: $fontStack;
  }
}

// Desktop only stylings.
@include at-query($min, $large) {
  .sidebar__content {
    border: 1px solid #D9D9D9;
    padding: 15px;
  }
  .step__footer__previous-link {
    display: none;
  }

  // This centers the continue button on desktop, but fucks
  // things up on mobile.
  .step__footer {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo {
    margin-top: 40px;
    margin-bottom: 20px;
  }
}

.step__footer__previous-link {
  font-family: $fontStack;
}

.continue-shopping {
  font-family: $fontStack;
  width: 100%;
  text-align: left;
  color: $colorPrimary;
}

.continue-shopping__text {
  vertical-align: top;
  margin-top: -1px;
  margin-left: 10px;
/*   font-size: 14px; */

  @extend .paragraph3;
}

.sidebar__content {
  margin-bottom: 20px; // Otherwise, a tall sidebar sits on the ground.
}

// Field inputs

.field__input {
  border: 1px solid #D9D9D9;
  border-radius: 0;
  box-shadow: none !important;
}

.field--error .field__input {
  border-color: #FFC5C7;
  background-color: #FFEFEF;
}

.field__input-wrapper,
.field__input-wrapper label {
  font-family: 'Helvetica', sans-serif;
}

