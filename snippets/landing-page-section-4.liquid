<style>
    {% capture content %}
  .find-print-button {
    padding: 20px;
    font-size: 24px;
    background-color: #364076;
    color: white;
    font-family: "fontin_sans_rgregular",serif;
  }
  @media (max-width: 767px) {
  .find-print-button-mobile {
    font-size: 18px;
  }
  }
{% endcapture %}
{% assign content =  content | strip_newlines | split: " " | join: " " | split: "*/" %}
{% assign new_content = "" %}
{% for word in content %}
	{% assign new_word = word | split: "/*" | first | strip %}
  	{% assign new_content = new_content | append: new_word %}
{% endfor %}
{{ new_content }}
</style>
<div class="grid landing-page-section">
  <div class="grid__item one-whole text-center">
    <a class="find-print-button find-print-button-mobile" href="{{ shop.url | append: section.settings.shop_col }}">{{section.settings.section_4_text}}</a>
  </div>
</div>
