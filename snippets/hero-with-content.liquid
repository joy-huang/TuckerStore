{% comment %}

@param data - Obj with the settings data. Can be either a section or a block.

{% endcomment %}
<style>
  #hero-container-{{ data.id }} {
      margin-bottom: {{data.settings.hero-space-mobile}}px;
  }

  #hero-description-{{ data.id }} {
    font-size: {{ data.settings.description_font_size_mobile }}px;
    line-height: 1.3;
  }


  @media screen and (min-width: 969px) {
  	#hero-description-{{ data.id }} {
    	font-size: {{ data.settings.description_font_size_desktop }}px;
  	}

    #hero-container-{{ data.id }} {
      margin-bottom: {{data.settings.hero-space-desktop}}px;
    }
    .hero-section-title {
    	font-size: {{data.settings.font-size-title-desktop}}px !important;
  	}

  }
</style>
<div id="hero-container-{{ data.id }}" class="hero-section-container">
  {% if data.settings.hero_url != blank %}
  	<a href="{{ data.settings.hero_url }}" style="color: inherit;">
  {% endif %}

  <img class="hero-collection-img lazyload" src="{{ data.settings.hero_image | img_url: '100x' }}" data-src="{{ data.settings.hero_image | img_url: 'master' }}" alt="{{ data.settings.hero_title }}">
  <img class="hero-collection-img mobile lazyload" src="{{ data.settings.hero_image_mobile | img_url: '100x' }}" data-src="{{ data.settings.hero_image_mobile | img_url: 'master' }} " alt="{{ data.settings.hero_title }}">

  <div class="hero-caption-wrapper">
    <div class="hero-caption top-{{ data.settings.caption_position }}">

      {% if data.settings.hero_title != blank %}
        <h1 class="hero-section-title">
          {{ data.settings.hero_title }}
        </h1>
      {% endif %}

      {% if data.settings.hero_description and data.settings.hero_description != '' %}
        <p class="hero-section-description" id="hero-description-{{ data.id }}">
          {{ data.settings.hero_description }}
        </p>
      {% endif %}


      {% if data.settings.hero_url != blank and data.settings.hero_url_label != blank%}
        <button class="hero-section-button {% if data.settings.is_link_a_btn %} btn {% else %} link {% endif %}">
          {{ data.settings.hero_url_label }}
        </button>
      {% endif %}

    </div>
  </div>

  {% if data.settings.hero_url != blank %}
  	</a>
  {% endif %}


</div>

<style>


  .hero-section-container {
  	position: relative;
  }

  .hero-section-title,
  .hero-section-description,
  .hero-section-button
  {
    font-family: "fontin_sans_rgregular", serif;

  }



  .hero-caption {
    position: absolute;
    width: auto;
    height: 330px;
	padding-top: 7.5vh;
    padding-left: 7.6vw;
  }
  .hero-caption.top-left {
  	top: 0;
  }

  .hero-collection-img {
  	width: 100%;
  }
  .hero-collection-img.mobile {
  	display: none;
  }
  .hero-caption-wrapper .hero-caption  .hero-section-title {
  	font-size: 4vw;
    font-weight: normal;
    line-height: 4vw;
    margin-bottom: 20px;
  }
  .hero-section-description,
  .hero-section-button {
  	font-size: 15px;
    line-height: 24px;
  }
  .hero-section-description {
      margin-bottom: 40px;
  }
  .hero-section-button {
  	color: white;
    border-bottom: 1px solid;
  }

  .hero-section-button.btn {
    border: 1px solid  {{ data.settings.color_button_bg }};
    border-radius: 0;
    padding: 12px 32px;
  }

    .hero-section-button.btn {
  	background-color: {{ data.settings.color_button_bg }};
  	color: {{ data.settings.color_button_text }};
  }

  .hero-section-button.btn:hover {
    color: {% if data.settings.color_button_bg == 'rgba(0,0,0,0)' %} white {% else %} {{ data.settings.color_button_bg }} {% endif %};
    background-color: {{ data.settings.color_button_text }};
  }

  @media screen and (min-width: 969px) {


     .hero-section-title {
    color: {{ data.settings.color_hero_title }};
  }

  .hero-section-description {
    color: {{ data.settings.color_hero_description }};
  }



  	.hero-caption.top-right {
      top: 0;
      right: 5.6vw;
    }
  	.hero-caption.top-top-center {
      top: 0;
      text-align: center;
      padding-left: 0;
      width: 100%;
    }
  	.hero-caption.top-center {
      top: 0;
      text-align: center;
      padding: 0;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .hero-caption.top-left-center {

        padding-top: 0;
        top: 50%;
        transform: translateY(-50%);
        height: auto;
    }
    .hero-caption.top-right-center {

        padding-top: 0;
        top: 50%;
      right: 0;
        transform: translateY(-50%);
        height: auto;
    }

  }

  @media screen and (max-width: 1200px)  and (min-width: 768px){
    .hero-caption-wrapper .hero-caption  .hero-section-title {
      font-size: 5vw;
      line-height: 4vw;
      margin-bottom: 20px;
    }
  }

  @media screen and (max-width: 968px) {
    .hero-collection-img {
    	display: none;
    }
    .hero-caption {
      position: relative;
      color: black;
      width: 100%;
      padding: 0 10px;
      height: initial;
    }
    .hero-caption-wrapper .hero-caption  .hero-section-title{
      font-size: 2.5em;
      line-height: 1.3;
      margin: 2.1vh auto;
    }
    .hero-collection-img.mobile {
	  display: block;
    }
    .hero-caption {
  	  box-sizing: border-box;
    }
  }
</style>
