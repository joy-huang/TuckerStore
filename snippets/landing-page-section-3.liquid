<style>
  {% capture content %}
  .section-3-pg {
    display: inline-block;
    vertical-align: middle;
    background: #FEF3DF;
    padding: 20px;
    margin-left: 1.5vw;
    margin-bottom: 1.5vw;
  }
  .grid__item.reviews {
  	padding:0px;
  }
{% endcapture %}
{% assign content =  content | strip_newlines | split: " " | join: " " | split: "*/" %}
{% assign new_content = "" %}
{% for word in content %}
	{% assign new_word = word | split: "/*" | first | strip %}
  	{% assign new_content = new_content | append: new_word %}
{% endfor %}
{{ new_content }}
</style>

<div class="grid landing-page-section">
  <div class="grid__item one-whole">
    <h2 class="headline2b">{{section.settings.section_3_title}}</h2>
  </div>
  <div class="grid__item one-whole reviews">
    {% for item in section.blocks %}
    <div class="section-3-pg large--forty-six-point-six-tenths small--one-whole">
      <div>
        <p class="text-center paragraph1 small--font-size">
          {{item.settings.section_3_pg_1}}
        </p>
        <p class="text-center paragraph1 small--font-size">
          {{item.settings.section_3_stars_1}} {{item.settings.section_3_customer_1}}
        </p>
      </div>
    </div>
    <div class="section-3-pg large--forty-six-point-six-tenths small--one-whole">
      <div>
        <p class="text-center paragraph1 small--font-size">
          {{item.settings.section_3_pg_2}}
        </p>
        <p class="text-center paragraph1 small--font-size">
          {{item.settings.section_3_stars_2}} {{item.settings.section_3_customer_2}}
        </p>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
