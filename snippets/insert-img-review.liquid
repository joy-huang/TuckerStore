<style>
{% capture content %}
.rw-img-modal {
  background:#FFF;
  margin-top:80px;
  width:300px;
}

.rw-img-modal-foot,.rw-img-modal-body,.rw-img-modal-head {
  margin:auto;
  padding:10px 0;
  width:90%;
}

#rw-img-modal-outer {
  background-color:rgba(0,0,0,0.498039);
  bottom:0;
  display:none;
  left:0;
  position:fixed;
  right:0;
  top:0!important;
  z-index:999;
}

#rw-img-modal-container {
  bottom:0;
  display:none;
  font-family:Helvetica, sans-serif;
  left:50%;
  margin-left:-150px;
  position:absolute;
  text-align:center;
  top:0!important;
  z-index:1000;
}

#tw-flash {
  background-color:#000;
  color:#FFF;
  display:none;
  font-size:20px;
  padding:10px;
  position:fixed;
  text-align:center;
  top:40px;
  width:100%;
}

#tw-flash p {
  margin:0;
}

.form-header-left,.form-header-right {
  padding:0;
}

#rw-img-modal-container h1 {
  color:#4f4f4f;
  font-size:25px;
}

#rw-img-modal-container .uploader {
  align-items:center;
  background:#f3f3f3;
  border:2px dashed #e8e8e8;
  display:flex;
  flex-direction:column;
  height:265px;
  justify-content:center;
  margin:0 auto;
  overflow:hidden;
  position:relative;
  width:100%;
}

#rw-img-modal-container #filePhoto {
  cursor:pointer;
  height:100%;
  left:0;
  opacity:0;
  position:absolute;
  top:-50px;
  width:100%;
  z-index:2;
}

#rw-img-modal-container .uploader img {
  border:none;
  height:100%;
  position:absolute;
  width:auto;
  z-index:1;
}

#rw-img-modal-container .fa-file-image-o.visible {
  display:block;
  font-size:90px;
  opacity:0.5;
}

#rw-img-modal-container .uploader p {
  color:#4f4f4f94;
  font-size:20px;
  font-weight:700;
  text-transform:uppercase;
}

#rw-img-modal-container .rw-img-modal-foot {
  display:flex;
  justify-content:space-between;
  padding-bottom:35px;
}

#rw-img-modal-container .rw-img-modal-foot .btn {
  border-radius:5px;
  padding:6px;
  width:115px;
}

#rw-img-modal-container .rw-img-modal-foot .btn.btn-img-cancel {
  background:none;
  color:#3874b9;
}

#rw-img-modal-container .rw-img-modal-foot .btn-img-upload {
  background:#666a6c;
}

#rw-img-modal-container .btn-img-upload.disable {
  background:#666a6ca3;
  pointer-events:none;
}

#rw-img-modal-container #loadingMsj {
  -moz-animation:flickerAnimation 1s infinite;
  -o-animation:flickerAnimation 1s infinite;
  -webkit-animation:flickerAnimation 1s infinite;
  animation:flickerAnimation 1s infinite;
  background:#f8f8f7;
  display:none;
  height:100%;
  line-height:130px;
  position:absolute;
  width:100%;
}

50% {
  opacity:0;
}

100% {
  opacity:1;
}

#rw-img-modal-container img[src=""],
#rw-img-modal-container .fa-file-image-o {
  display:none;
}

@media min-width 767px{
  .rw-img-modal {
    width:600px;
  }

  #rw-img-modal-container {
    margin-left:-300px;
  }
}

@media only screen and min-width 768px{
  .form-header-wrapper {
    display:flex;
  }
}
{% endcapture %}
{% assign content =  content | strip_newlines | split: " " | join: " " | split: "*/" %}
{% assign new_content = "" %}
{% for word in content %}
	{% assign new_word = word | split: "/*" | first | strip %}
	{% assign new_content = new_content | append: new_word %}
{% endfor %}
{{ new_content }}
</style>

{% assign review-server = "https://resonance-pr.herokuapp.com/" %}

<div id="rw-img-modal-outer"></div>
<div id="rw-img-modal-container" data-app="{{review-server}}" data-shop="tuckernyc-dev" style="display:none;">
  <div class="rw-img-modal">
    <div class="rw-img-modal-head">
    </div>
    <div class="rw-img-modal-body">
      <h4>Would you like to include a photo to let other customers know how this product fits?</h1>
      <div class="uploader" onclick="$('#filePhoto').trigger('click')">
        <p><i class="fa fa-file-image-o img-icon visible" aria-hidden="true"></i></p>
        <p>Drop or click to upload</p>
        <p id="loadingMsj">Uploading...</p>
        <img id="uploadedImage" src=""/>
        <input type="file" name="review_image"  id="filePhoto"  accept="Image/*"/>
      </div>
    </div>
    <div class="rw-img-modal-foot">
      <div class="btn btn-block btn-img-cancel">
        <span id="cancel">No thanks</span>
      </div>
      <div class="btn btn-block btn-img-upload disable">
        <span id="addImg">Upload photo</span>
      </div>
    </div>
  </div>
</div>
