<style>
  {% capture content %}
  .section-2-img-left,
  .section-2-img-right {
    display: inline-block;
    vertical-align: middle;
    margin-left: 1.5vw;
    margin-bottom: 1.5vw;
  }
  .grid__item.images {
  	padding:0px;
  }
{% endcapture %}
{% assign content =  content | strip_newlines | split: " " | join: " " | split: "*/" %}
{% assign new_content = "" %}
{% for word in content %}
	{% assign new_word = word | split: "/*" | first | strip %}
  	{% assign new_content = new_content | append: new_word %}
{% endfor %}
{{ new_content }}
  
</style>

<div class="grid landing-page-section">
  <div class="grid__item one-whole">
    <h2 class="headline2b">{{section.settings.section_2_title}}</h2>
  </div>
  <div class="grid__item one-whole images">
    {% for item in section.blocks %}
    <div class="section-2-img-left large--forty-six-point-six-tenths small--one-whole">
      <div>
        <img
             src="{{item.settings.section_2_img_1 | img_url: 'master'}}"
             alt=''
             class="">
      </div>
    </div>
    <div class="section-2-img-right large--forty-six-point-six-tenths small--one-whole">
      <div>
        <img
             src="{{item.settings.section_2_img_2 | img_url: 'master'}}"
             alt=''
             class="">
      </div>
    </div>
    {% endfor %}
  </div>
</div>
