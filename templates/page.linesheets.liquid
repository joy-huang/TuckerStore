<div class="grid--full info">
  <div class="grid__item large--one-whole">
    <div class="info__header">
      Linesheets
    </div>
  </div>
  <div class="info-box grid__item large--eight-twelfths push--large--two-twelfths">
    <p><a href="{{ 'linesheet-spring-2016-1.pdf' | asset_url }}" target="_blank">Spring 2016 Collection - First Delivery</a></p>
