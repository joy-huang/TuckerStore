<div class="password" style="position:fixed;z-index:100;background-color:white;top:0;right:0;bottom:0;left:0;text-align:center;">
  <div style="margin-top:70px;">
    <img width="170px" src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" />
  </div>
  <div style="margin-top:40px;">
    <form action="#">
      <input style="height:47px;" type="password" placeholder="Password" />
      <button style="height:47px;padding-left:20px;padding-right:20px;" type="submit" class="btn">ENTER</button>
    </form>
  </div>
  <div class="invalid-password" style="display:none;margin-top:10px;">
    Invalid password
  </div>
</div>

<script>
  $(function() {
    var $form = $('.password form');
    $form.submit(function(e) {
      e.preventDefault();
      var val = $form.find('input').val();
      if (val !== 'tuckernyc') {
        $('.invalid-password').show();
        return;
      }
      $('.password').hide();
    });
  });
</script>
