            <div class="inputs-block large--one-half small--one-whole medium--one-whole">
              <input type="text" name="name"  placeholder="Name" class="inputs">
              <input type="text" name="email" placeholder="Email" class="inputs">
            </div>
            <div class="inputs-block large--one-half small--one-whole medium--one-whole one-half-reduce">
              <input type="text" name="phone" placeholder="Phone Number" class="inp">
              <input type="text" name="subject" placeholder="Subject">
            </div><br>
            <div class="textarea-input">
              <label>Message</label><br>

              <textarea name="" id=""  rows="5" style="width:100%"></textarea>
            </div>
            <button type="submit" id="SendContact">Send</button>
          </form>
        </div>
      </div>
    </div>


  </div>
</div>
    


