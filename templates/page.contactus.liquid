  } */
  .textarea-input{
    text-align: -webkit-left;
  }
  .textarea-input > textarea{
    background: none;
    border: 1px solid grey;
  } 
  #SendContact{
    border-color: #364076;
    min-width: 200px;
    font-weight: bold;
    background-color: transparent;
    border: 1px solid;
    padding: 8px 20px;
    color: #364076;
    background: none;
    overflow: visible;
    font-size: 13px;
    letter-spacing: 1.8px;
    font-family: "fontin_sans_rgregular","Georgia", serif;
    line-height: 17px;
  }
  
  #SendContact:hover{
    background-color: transparent;
    border: 1px solid #969595;
    color: #969595;
  }
 
  @media only screen and (max-width: 768px) {
    .form-contact-mobile {
      width: 80%;
      margin: 0;
    }
  }

  @media (min-width: 769px){
    .one-half-reduce {
      width: 49%;
    }
    .title-spaces-desktop {
      margin-bottom:3vw;
    }

  }
  
  body#contact-us .wrapper.wrapper-container.wrapper-content {
    min-height: 600px;
  }
  
</style>

